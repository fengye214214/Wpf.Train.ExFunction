<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--蓝色背景-->
    <!--系统窗体边框阴影-->
    <DropShadowEffect x:Key="WindowDropShadow" BlurRadius="5" Color="#FF858484"  ShadowDepth="0"/>
    <!--系统窗体主要背景色-->
    <SolidColorBrush x:Key="SysWindowBackground" Color="#0562A9"/>
    <!--系统窗体默认边框色-->
    <SolidColorBrush x:Key="SysWindowBorder" Color="#0082FF"/>
    <!--系统窗体文本颜色-->
    <SolidColorBrush x:Key="SysWindowForeground" Color="Black"/>
    <!--标题栏背景-->
    <SolidColorBrush x:Key="SysWindowCaptionBackground" Color="#007ACC"/>

    <!--按钮字体颜色-->
    <SolidColorBrush x:Key="ButtonForeground" Color="Black"/>
    <!--按钮字体-->
    <FontFamily x:Key="ButtonFontFamily" >Microsoft YaHei</FontFamily>
    <!--按钮背景色-->
    <SolidColorBrush x:Key="ButtonBackground"  Color="#007ACC"/>
    <!--按钮悬浮背景颜色-->
    <SolidColorBrush x:Key="ButtonMouseOverBackground" Color="#0082FF"/>

    <!--文本框背景色-->
    <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
    <!--文本框边框色-->
    <SolidColorBrush x:Key="TextBoxBorad" Color="#CCCEDB"/>
    <!--文本汉字颜色-->
    <SolidColorBrush x:Key="TextForeground" Color="Black"/>

</ResourceDictionary>