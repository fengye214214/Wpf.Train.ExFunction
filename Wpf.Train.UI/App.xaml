<Application x:Class="Wpf.Train.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:zed="clr-namespace:Wpf.Train.CustomControlLib;assembly=Wpf.Train.CustomControlLib"
             StartupUri="Login.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <!--控件样式-->
                <ResourceDictionary Source="pack://application:,,,/Wpf.Train.CustomControlLib;component/Themes/DefaultStyle.xaml" />
                <!--语言-->
                <ResourceDictionary Source="./Language/ZH_CN.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
